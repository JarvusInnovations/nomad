<section class="section">
  <table class="table">
    <thead>
      <tr>
        <td>Name</td>
        <td>Type</td>
        <td>Priority</td>
        <td>Status</td>
        <td>Datacenters</td>
        <td>Groups</td>
        <td>Allocation Status</td>
      </tr>
    </thead>
    <tbody>
      {{#each model as |job|}}
        <tr>
          <td><a href="{{href-to "jobs.job" job.id}}">{{job.name}}</a></td>
          <td>{{job.type}}</td>
          <td>{{job.priority}}</td>
          <td>{{job.status}}</td>
          <td>{{job.datacenters}}</td>
          <td>{{job.taskGroups.length}}</td>
          <td>{{job.queuedAllocs}} | {{job.completeAllocs}} | {{job.failedAllocs}} | {{job.runningAllocs}} | {{job.startingAllocs}} | {{job.lostAllocs}}</td>
        </tr>
      {{/each}}
    </tbody>
</table>
</section>
